section.banner(data-animate='clip-path')
  .banner-bg
    .banner-bg__media
      video.video(
        disablePictureInPicture,
        preload='metadata',
        playsinline,
        loop,
        muted,
        autoplay
      ) 
        source(data-src=require('@/assets/video/banner.mp4'), type='video/mp4')

  ._container.banner__container
    .banner__wrapper
      .banner__content
        .banner__main
          h1.banner__title Learn to One Arm Handstand - become your own hero!

          p.banner__subtitle <span>One Arm Labs</span> is the step by step personal online program

        .banner-action
          p.banner-action__title Ready to start?

          a.banner-action__button.button-light(
            href='https://courses.coachbachmann.com/checkout/?rid=p1x07N',
            target='_blank',
            rel='noreferrer'
          ) 
            span Learn to One Arm Handstand

      button.banner-play.popup-open(
        data-popup='_popup-banner',
        title='play video'
      )
